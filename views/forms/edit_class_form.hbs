<h4 class="title">Редакция направления факультета</h4>

<div class="row ">
    <form method="post" action="/edit">
        <input type="hidden" name="id" value="{{this.id}}"/>

        <div class="input-field col s12">
            <label>Направление</label>
            <input type="text" name="napravlenie" value="{{this.napravlenie}}"/>
        </div>

        <div class="input-field col s12">
            <label>Факультет</label>
            <input type="text" name="fakultet" value="{{this.fakultet}}"/>
        </div>


        <label>Уровень образования</label>
        <div class="input-field col s12">
            <select name="type_of_education" class="browser-default">
                {{#select this.type_of_education}}
                <option>---</option>
                <option  value="Бакалавр">Бакалавр</option>
                <option  value="Магистр">Магистр</option>
                {{/select}}
            </select>
        </div>

        <div class="input-field col s12">
        <button class="right btn btn-xsmall waves-effect waves-light right" type="submit"  >
           Сохранить
        </button>


            <a href="/classes" class="right btn btn-xsmall waves-effect waves-light right "   >
                Вернуться к списку
            </a>
        </div>
    </form>
</div>
